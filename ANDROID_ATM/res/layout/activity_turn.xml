<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TurnActivity" >
   
    <TextView 
        android:id="@+id/turn_text_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入转入账号"
        />
    <EditText 
        android:id="@+id/turn_edit_other"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/turn_text_other"
        android:text="请输入转入账号"
        />	
    <TextView 
        android:id="@+id/turn_text_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/turn_edit_other"
        android:text="请输入转出金额"
        />
    <EditText 
        android:id="@+id/turn_edit_balance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/turn_text_balance"
        android:text="请输入转出金额"
        />
    <TextView 
        android:id="@+id/turn_text_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/turn_edit_balance"
        android:text="请输密码"
        />
    <EditText 
        android:id="@+id/turn_edit_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/turn_text_pwd"
        android:text="请输入密码"
        />
    <Button 
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/turn_edit_pwd"
        android:text="确定"
        />
</RelativeLayout>