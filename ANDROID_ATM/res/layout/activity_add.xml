<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddActivity" >
    <TextView
        android:id="@+id/msg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您好" />   
     <TextView
	    android:id="@+id/add_text_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg1"
        android:text="当前金额" />      
	<TextView
	    android:id="@+id/add_text_now2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_text_now"
        android:text="TextView" />
	<TextView
	    android:id="@+id/add_text_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_text_now2"
        android:text="存入金额" />    
	<EditText
	    android:id="@+id/add_edit_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_text_add"
        android:text="存入金额" />
	<TextView
	    android:id="@+id/add_text_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_edit_add"
        android:text="密码" />    
	<EditText
	    android:id="@+id/add_edit_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_text_pwd"
        android:text="密码" />
	
	<Button 
	    android:id="@+id/add"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_edit_pwd"
        
        android:text="确认"
	    />

	<Button
	    android:id="@+id/ret"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginRight="12dp"
	    android:text="返回主页" />

</RelativeLayout>